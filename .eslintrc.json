{
  "plugins": ["node", "security", "jest", "react"],
  "extends": ["airbnb", "plugin:jest/recommended", "plugin:security/recommended", "plugin:node/recommended"],
  "rules": {
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }],
    "node/no-unsupported-features/es-syntax": 0,
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "comma-dangle": ["error", {
      "functions": "never"
    }],
    "indent": ["error", 2],
    "no-trailing-spaces": [0, {
      "skipBlankLines": true
    }],
    "one-var-declaration-per-line": [0, "never"],
    "one-var": [2, {
      "var": "never",
      "let": "always",
      "const": "never"
    }],
    "max-len": ["error", {
      "code": 150
    }]
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  }
}
