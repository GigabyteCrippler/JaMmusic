{
  "plugins": ["node", "security", "jest", "react"],
  "extends": ["airbnb", "plugin:jest/recommended", "plugin:security/recommended", "plugin:node/recommended"],
  "rules": {
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }],
    "node/no-unsupported-features/es-syntax": 0,
    "comma-dangle": ["error", {
      "functions": "never"
    }],
    "max-len": ["error", {
      "code": 150
    }],
    "one-var-declaration-per-line": [0, "never"],
    "one-var": [2, {
      "var": "never",
      "let": "always",
      "const": "never"
    }],
    "no-useless-escape": 0,
    "no-multi-assign": "off",
    "no-underscore-dangle": [0, "never"],
    "no-restricted-globals": "off",
    "nonblock-statement-body-position": "off",
    "no-alert": [0, "never"],
    "class-methods-use-this": [0, "never"],
    "no-restricted-syntax": [0, "never"],
    "newline-per-chained-call": "off",
    "object-curly-newline": "off",
    "prefer-rest-params": "off",
    "spaced-comment": "off",
    "no-template-curly-in-string": "off",
    "curly": "off",
    "no-param-reassign": [0, "never"],
    "jest/valid-expect-in-promise": "off",
    "jest/no-jasmine-globals": "off",
    "import/prefer-default-export": [0, "never"],
    "react/jsx-curly-spacing": "off",
    "react/jsx-tag-spacing": "off",
    "react/no-array-index-key": "off",
    "react/jsx-one-expression-per-line": "off",
    "react/jsx-closing-bracket-location": "off",
    "react/jsx-closing-tag-location": "off",
    "react/jsx-wrap-multilines": "off",
    "react/jsx-indent": "off",
    "react/destructuring-assignment": "off",
    "react/prop-types": "off",
    "react/no-access-state-in-setstate": "off",
    "react/sort-comp": "off",
    "react/self-closing-comp": 0,
    "jsx-a11y/img-redundant-alt": "off",
    "jsx-a11y/mouse-events-have-key-events": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/anchor-has-content": 0
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  }
}
