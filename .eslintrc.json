{
  "plugins": ["node", "security", "jest", "react"],
  "extends": ["airbnb", "plugin:jest/recommended", "plugin:security/recommended", "plugin:node/recommended"],
  "rules": {
    "react/prop-types": 0,
    "react/no-access-state-in-setstate": 0,
    "react/sort-comp": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "react/no-array-index-key": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/img-redundant-alt": 0,
    "jsx-a11y/anchor-has-content": 0,
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }],
    "node/no-unsupported-features/es-syntax": 0,
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "comma-dangle": ["error", {
      "functions": "never"
    }],
    "indent": ["error", 2],
    "no-trailing-spaces": [0, {
      "skipBlankLines": true
    }],
    "one-var-declaration-per-line": [0, "never"],
    "one-var": [2, {
      "var": "never",
      "let": "always",
      "const": "never"
    }],
    "max-len": ["error", {
      "code": 150
    }]
  },
  "env": {
    "jest": true,
    "browser": true,
    "node": true
  },
  "globals": {
    "page": true,
    "browser": true,
    "context": true,
    "jestPuppeteer": true
  }
}
